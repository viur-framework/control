{
	"steps": [
		{
			"name": "apt install $packages",
			"step": 1,
			"checking": {
				"cmd": "python --version",
				"stderrRegex": "Python\\s+(\\d)\\.(\\d)\\.(\\d+)"
			},
			"install": {
				"cmd": "apt-get install apt-transport-https build-essential python2.7 python-imaging python-pip python-dev git python-jinja2 python-setuptools python-wheel python-pytz",
				"addEnv": [
					"C:\\Python27\\",
					"C:\\Python27\\Scripts"
				]
			}
		},
		{
			"name": "node.js",
			"step": 2,
			"checking": {
				"title": "Checking if node.js is installed",
				"cmd": "node --version",
				"stdoutRegex": "v(\\d+)\\.(\\d+)\\.(\\d+)"
			},
			"download": {
				"url": "https://nodejs.org/dist/v9.2.0/node-v9.2.0-x64.msi",
				"dest": "dependencyCache\\node-v9.2.0-x64.msi"
			},
			"install": {
				"cmd": "curl -sL https://deb.nodesource.com/setup_10.x | sudo -E bash - && sudo apt-get install -y nodejs"
			}
		},
		{
			"name": "Google cloud SDK",
			"step": 5,
			"checking": {
				"cmd": "gcloud --version",
				"stdoutRegex": "Google\\sCloud\\sSDK\\s.*"
			},
			"install": {
				"cmd": "bash dependency-installer/linux/ubuntu/gcloudRepoInstall.sh",
				"directory": "%HOMEDIR%\\AppData\\Local\\Google\\google-cloud-sdk",
				"inputNeeded": {
					"output": "Press any key to continue",
					"stdinFeed": "y\n"
				},
				"addEnv": [
					"%HOMEDIR%\\AppData\\Local\\Google\\google-cloud-sdk\\bin"
				]
			},
			"postInstall": "gcloud config configurations create viur-control-default; gcloud config set app/promote_by_default false"
		},
		{
			"name": "lessc",
			"step": 6,
			"checking": {
				"cmd": "lessc --version",
				"stdoutRegex": ".*Less Compiler.*"
			},
			"install": {
				"cmd": "npm install -g less"
			}
		},
		{
			"name": "pyjs",
			"step": 7,
			"checking": {
				"cmd": "pyjsbuild --help",
				"stdoutRegex": "Usage:\\spyjsbuild.*"
			},
			"install": {
				"cmd": "pip install \"git+https://github.com/pyjs/pyjs.git#egg=pyjs\""
			}
		},
		{
			"name": "native admin for windows",
			"step": 8,
			"optional": true,
			"checking": {
				"cmd": "pyjsbuild --help",
				"stdoutRegex": "Usage:\\spyjsbuild.*"
			},
			"install": {
				"cmd": "pip install \"git+https://github.com/pyjs/pyjs.git#egg=pyjs\""
			}
		}
	]
}
